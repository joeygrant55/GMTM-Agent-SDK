# GMTM Agent SDK Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ============================================
# REQUIRED API KEYS
# ============================================

# E2B Sandbox API Key - Get from https://e2b.dev
E2B_API_KEY=e2b_your_key_here

# Anthropic API Key - Get from https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-your_key_here

# ============================================
# EXISTING INTEGRATIONS
# ============================================

# Notion MCP Token - From Notion integrations
NOTION_TOKEN=secret_your_token_here

# GMTM Database URL (read-only)
GMTM_DB_URL=mysql://gmtmread:password@host:3306/gmtm

# SendGrid API Key - For email automation
SENDGRID_API_KEY=SG.your_key_here

# ============================================
# SOCIAL MEDIA APIs
# ============================================

# X/Twitter - From developer.twitter.com
TWITTER_BEARER_TOKEN=
TWITTER_API_KEY=
TWITTER_API_SECRET=

# LinkedIn - From LinkedIn Developer Portal
LINKEDIN_ACCESS_TOKEN=

# Instagram/Meta - From Meta for Developers
META_ACCESS_TOKEN=

# ============================================
# CRM & ANALYTICS (optional)
# ============================================

# HubSpot
HUBSPOT_API_KEY=

# Google Analytics
GA_MEASUREMENT_ID=
GA_API_SECRET=
